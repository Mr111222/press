{
  "cb-scroll": {
		"description": "CbScroll",
		"prefix": "cb-scroll",
		"body": [
			"<CbScroll @action=\"${1:action}\">",
			"\t$0",
			"</CbScroll>"
    ]
	},
	"cb-scroll-custom-text": {
		"description": "CbScroll custom text",
		"prefix": "cb-scroll-custom-text",
		"body": [
			"<CbScroll",
			"\t@action=\"${1:action}\"",
			"\tpullupTxt=\"${2:pullupTxt}\"",
			"\tpulldownTxt=\"${3:pulldownTxt}\"",
			"\tloadingTxt=\"${4:loadingTxt}\"",
			"\tnodataTxt=\"${5:nodataTxt}\"",
			">",
			"\t$0",
			"</CbScroll>"
    ]
	},
	"cb-scroll-with-slot": {
		"description": "CbScroll with slot",
		"prefix": "cb-scroll-with-slot",
		"body": [
			"<CbScroll @action=\"${1:action}\">",
			"\t<${2:div} slot=\"pullup\">",
			"\t\t",
			"</${2:div}>",
			"\t<${3:div} slot=\"loading\">",
			"\t\t",
			"</${3:div}>",
			"\t<${4:div} slot=\"pulldown\">",
			"\t\t",
			"</${4:div}>",
			"\t<${5:div} slot=\"nodata\">",
			"\t\t",
			"</${5:div}>",
			"\t<${6:div}",
			"\t\t",
			"\t</${6:div}>",
			"</CbScroll>"
		]
	}
}
